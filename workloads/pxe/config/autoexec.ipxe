#!ipxe

goto boot

:boot
dhcp
kernel http://${CLUSTER_KERNELSERVER_FIXEDIPV4}/k8sHyperV/vmlinuz initrd=initrd.img root=/dev/nbd0 nbdroot=${CLUSTER_NBDSERVER_FIXEDIPV4},k8sHyperV, noresume
initrd http://${CLUSTER_KERNELSERVER_FIXEDIPV4}/k8sHyperV/initrd.img
boot || goto failed

:exit
# Exit with error, to fall back to the next boot option
# http://forum.ipxe.org/showthread.php?tid=6775
exit 1

:failed
echo Booting failed, dropping to shell
goto _shell

:_shell
echo Dropping to shell
shell
