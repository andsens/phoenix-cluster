[Unit]
Description=Check if the home-cluster secureboot certificate is the only certificate in the MOK DB
Before=keylime_agent.service systemd-logind.service
OnFailure=fix-mok-db.service

[Install]
WantedBy=sysinit.target

[Service]
Type=oneshot
ExecStart=/usr/local/lib/upkg/.upkg/home-cluster/workloads/bootstrap/bin/exclusive-mok --dry-run
