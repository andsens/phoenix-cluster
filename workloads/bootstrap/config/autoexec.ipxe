#!ipxe

dhcp
kernel http://${CLUSTER_BOOTSERVER_FIXEDIPV4}/${buildarch}/vmlinuz initrd=initrd.img root=/run/initramfs/rootfs/root.img bootserver=${CLUSTER_BOOTSERVER_FIXEDIPV4} noresume || goto failed
initrd http://${CLUSTER_BOOTSERVER_FIXEDIPV4}/${buildarch}/initrd.img || goto failed
boot || goto failed

:failed
echo Booting failed, dropping to shell
shell
