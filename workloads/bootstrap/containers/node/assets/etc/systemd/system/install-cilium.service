[Unit]
Description=Install Cilium in K3S
Documentation=https://docs.cilium.io/en/stable/installation/k3s/
Requires=k3s@server.service
After=k3s@server.service

[Install]
WantedBy=k3s@server.target

[Service]
Type=oneshot
Environment=HOME=/root KUBECONFIG=/etc/rancher/k3s/k3s.yaml
ExecStart=/usr/local/bin/install-cilium
TimeoutSec=1200
