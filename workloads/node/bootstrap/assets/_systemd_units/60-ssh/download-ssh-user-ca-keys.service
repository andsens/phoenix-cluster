[Unit]
Description=Download SSH User CA keys
Requires=resource-ready@step-ca.target
After=resource-ready@step-ca.target ssh.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
Environment=KUBECONFIG=/etc/rancher/k3s/k3s.yaml
TimeoutSec=1200
ExecStart=bash -c 'step ssh config --host --roots >/etc/ssh/user_ca_keys'
ExecStart=systemctl reload ssh
