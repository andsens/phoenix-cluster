[Unit]
Description=Install Cilium in K3S
Documentation=https://docs.cilium.io/en/stable/installation/k3s/
Requires=resource-ready@k3s.target
After=resource-ready@k3s.target

[Install]
WantedBy=k3s@server.service

[Service]
Type=oneshot
Environment=HOME=/root KUBECONFIG=/etc/rancher/k3s/k3s.yaml
ExecStart=/usr/local/lib/upkg/.upkg/home-cluster/workloads/cilium/bin/install-cilium
TimeoutSec=1200
