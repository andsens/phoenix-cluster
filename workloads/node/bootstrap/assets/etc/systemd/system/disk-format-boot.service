[Unit]
Description=Format the boot partition
ConditionPathExists=/run/initramfs/node-config.json
Requires=disk-partition.service
After=disk-partition.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/lib/upkg/.upkg/home-cluster/workloads/node/bin/disk format boot
