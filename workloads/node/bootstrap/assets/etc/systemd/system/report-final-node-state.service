[Unit]
Description=Report the final node-state to the boot-server
DefaultDependencies=no
Requires=systemd-timesyncd.service authn-key-available.target
After=systemd-timesyncd.service authn-key-available.target
Before=configure-networks.service

[Install]
WantedBy=sysinit.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=report-node-state
