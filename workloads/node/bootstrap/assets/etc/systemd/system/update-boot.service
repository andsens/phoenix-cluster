[Unit]
Description=Update the boot partition with the latest image
Requires=boot.mount create-persistent-dir@boot-tmp.service systemd-networkd-wait-online.service
After=boot.mount create-persistent-dir@boot-tmp.service systemd-networkd-wait-online.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
ExecStart=/usr/local/lib/upkg/.upkg/home-cluster/workloads/node/bin/update-boot
