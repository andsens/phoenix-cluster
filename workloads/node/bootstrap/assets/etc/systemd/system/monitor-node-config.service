[Unit]
Description=Monitor the node configuration
Requires=systemd-networkd-wait-online.service
After=systemd-networkd-wait-online.service

[Install]
WantedBy=multi-user.target

[Service]
Restart=always
RestartSec=1m
Type=oneshot
ExecStart=/usr/local/lib/upkg/.upkg/home-cluster/workloads/node/bin/download-node-config
