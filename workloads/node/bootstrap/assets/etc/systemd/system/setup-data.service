[Unit]
Description=Initialize and mount the persistent data partition
ConditionPathExists=/run/initramfs/node-config.json
ConditionPathIsMountPoint=!/var/lib/persistent
Requires=setup-disk.service
After=setup-disk.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/lib/upkg/.upkg/home-cluster/workloads/node/bin/setup-data
