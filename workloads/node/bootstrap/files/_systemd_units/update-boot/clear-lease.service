[Unit]
Description=Clear the reboot lease
Requires=resource-ready@k3s.service switch-boot.service
After=resource-ready@k3s.service switch-boot.service
ConditionPathExists=|/boot/tryboot.img
ConditionPathExists=|/boot/EFI/Linux/uki.try.efi

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
ExecStart=try-reboot clear
