#!/usr/bin/env bash
# shellcheck source-path=../../..
set -Eeo pipefail; shopt -s inherit_errexit
PKGROOT=$(realpath "$(dirname "$(realpath "${BASH_SOURCE[0]}")")/../../..")

main() {
  source "$PKGROOT/.upkg/records.sh/records.sh"
  source "$PKGROOT/.upkg/trap.sh/trap.sh"
  source "$PKGROOT/workloads/node/bootstrap/assets/etc/initramfs-tools/scripts/node.sh"
  source "$PKGROOT/workloads/node/bootstrap/assets/etc/initramfs-tools/scripts/curl-boot-server.sh"

  DOC="update-boot - Update the boot partition with the latest image
Usage:
  update-boot
"
# docopt parser below, refresh this parser with `docopt.sh update-boot`
# shellcheck disable=2016,2086,2317,1090,1091,2034
docopt() { local v='2.0.2'; source \
"$PKGROOT/.upkg/docopt-lib-v$v/docopt-lib.sh" "$v" || { ret=$?;printf -- "exit \
%d\n" "$ret";exit "$ret";};set -e;trimmed_doc=${DOC:0:82};usage=${DOC:62:20}
digest=52055;options=();node_0(){ return 0;};cat <<<' docopt_exit() { [[ -n $1 \
]] && printf "%s\n" "$1" >&2;printf "%s\n" "${DOC:62:20}" >&2;exit 1;}';local \
varnames=() varname;for varname in "${varnames[@]}"; do unset "var_$varname"
done;parse 0 "$@";return 0;local p=${DOCOPT_PREFIX:-''};for varname in \
"${varnames[@]}"; do unset "$p$varname";done;eval ;local docopt_i=1;[[ \
$BASH_VERSION =~ ^4.3 ]] && docopt_i=2;for ((;docopt_i>0;docopt_i--)); do for \
varname in "${varnames[@]}"; do declare -p "$p$varname";done;done;}
# docopt parser above, complete command for generating this parser is `docopt.sh --library='"$PKGROOT/.upkg/docopt-lib-v$v/docopt-lib.sh"' update-boot`
  eval "$(docopt "$@")"

  trap_append clear_boot_tmp EXIT

  BOOT_TMP=/var/lib/persistent/boot-tmp
  local boot_server
  VARIANT=$(get_node_state variant)
  if ! boot_server=$(get_node_state boot-server); then
    fatal "Unable to retrieve boot-server from node-state.json"
  fi
  clear_boot_tmp
  if ! curl_boot_server -o$BOOT_TMP/digests.json "https://${boot_server}:8020/images/$VARIANT/digests.json"; then
    fatal "Unable to retrieve image digests from boot server"
  fi
  if [[ $VARIANT = rpi* ]]; then
    local current_boot_img_sha256 latest_boot_img_sha256
    current_boot_img_sha256=$(jq -re '.sha256sums["boot.img"]' /boot/digests.json)
    latest_boot_img_sha256=$(jq -re '.sha256sums["boot.img"]' $BOOT_TMP/digests.json)
    if [[ -e /boot/boot.img && $current_boot_img_sha256 = "$latest_boot_img_sha256" ]]; then
      info "boot.img is up-to-date"
    else
      info "boot.img is outdated, updating now"
      curl_boot_server -o$BOOT_TMP/root.img "https://${boot_server}:8020/images/$VARIANT/root.img"
      curl_boot_server -o$BOOT_TMP/boot.img "https://${boot_server}:8020/images/$VARIANT/boot.img"
      mkdir $BOOT_TMP/boot-img
      mount $BOOT_TMP/boot.img $BOOT_TMP/boot-img
      trap_append "umount $BOOT_TMP/boot-img" EXIT
      # shellcheck disable=SC2115
      rm -rf /boot/*
      cp -r $BOOT_TMP/boot-img/. /boot/
      mkdir /boot/home-cluster
      mv /boot/home-cluster/root.img.new /boot/home-cluster/root.img
    fi
  else
    local efisuffix latest_uki_sha256
    case $VARIANT in
      amd64) efisuffix=X64 ;;
      arm64) efisuffix=AA64 ;;
      *) fatal "Unknown variant: %s" "$VARIANT" ;;
    esac
    latest_uki_sha256=$(jq -re '.sha256sums["uki.efi"]' $BOOT_TMP/digests.json)
    if [[ -e /boot/EFI/BOOT/BOOT${efisuffix}.EFI && $latest_uki_sha256 = "$(sha256sum | cut -d ' ' -f1)" ]]; then
      info "uki.efi is up-to-date"
    else
      info "uki.efi is outdated, updating now"
      curl_boot_server -o$BOOT_TMP/root.img "https://${boot_server}:8020/images/$VARIANT/root.img"
      curl_boot_server -o$BOOT_TMP/uki.efi "https://${boot_server}:8020/images/$VARIANT/uki.efi"
      curl_boot_server -o$BOOT_TMP/pcr11.json "https://${boot_server}:8020/images/$VARIANT/pcr11.json"
      mkdir -p /boot/home-cluster /boot/EFI/BOOT
      mv $BOOT_TMP/root.img /boot/home-cluster/root.img.new
      mv $BOOT_TMP/uki.efi /boot/EFI/BOOT/BOOT${efisuffix}.EFI.new
      mv /boot/home-cluster/root.img.new /boot/home-cluster/root.img
      mv /boot/EFI/BOOT/BOOT${efisuffix}.EFI.new /boot/EFI/BOOT/BOOT${efisuffix}.EFI
    fi
  fi
}

clear_boot_tmp() {
  rm -rf ${BOOT_TMP:?}/*
}

main "$@"
