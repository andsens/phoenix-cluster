[Unit]
Description=Bootstrap VMs specified in /var/lib/home-cluster/bootstrap-vms.args.sh
Requires=var-lib-home\x2dcluster.mount var-lib-persistent.mount
After=var-lib-home\x2dcluster.mount var-lib-persistent.mount
ConditionPathExists=/var/lib/home-cluster/bootstrap-vms.args.sh

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
ExecStart=/var/lib/home-cluster/bin/bootstrap-vms.sh
