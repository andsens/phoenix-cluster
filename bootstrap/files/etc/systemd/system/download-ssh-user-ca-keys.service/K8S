[Unit]
Description=Sign SSH host keys
After=k3s.service apply-all-manifests.service
Before=sign-ssh-host-keys.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
Environment=KUBECONFIG=/etc/rancher/k3s/k3s.yaml
ExecStart=/var/lib/home-cluster/lib/machine-commands/ssh-keys download-ca /etc/ssh/user_ca_keys
TimeoutSec=1200
