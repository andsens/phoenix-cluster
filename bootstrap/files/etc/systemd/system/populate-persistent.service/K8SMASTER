[Unit]
Description=Create /var/lib/persistent subdirs
Requires=var-lib-persistent.mount
After=var-lib-persistent.mount
ConditionPathExists=!/var/lib/persistent/rancher

[Install]
WantedBy=persistent-volume.target

[Service]
Type=oneshot
ExecStart=mkdir /var/lib/persistent/lib-rancher /var/lib/persistent/lib-kubelet
