[Unit]
Description=Apply all home-cluster manifests
Requires=k3s.service install-cilium.service
After=install-cilium.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
Environment=HOME=/root KUBECONFIG=/etc/rancher/k3s/k3s.yaml
ExecStart=/var/lib/home-cluster/bin/manifest apply all
