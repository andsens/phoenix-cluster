[Unit]
Description=Install Cilium in K3S
Documentation=https://docs.cilium.io/en/stable/installation/k3s/
Requires=var-lib-home\x2dcluster.mount k3s.service
After=var-lib-home\x2dcluster.mount k3s.service

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
Environment=HOME=/root KUBECONFIG=/etc/rancher/k3s/k3s.yaml
ExecStart=/var/lib/home-cluster/lib/machine-commands/install-cilium
