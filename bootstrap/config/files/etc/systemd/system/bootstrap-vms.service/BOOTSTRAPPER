[Unit]
Description=Bootstrap VMs specified in /var/lib/bootstrapper/bootstrap-vms.args.sh
Requires=var-lib-bootstrapper.mount var-lib-persistent.mount
After=var-lib-bootstrapper.mount var-lib-persistent.mount
ConditionPathExists=/var/lib/bootstrapper/bootstrap-vms.args.sh

[Install]
WantedBy=multi-user.target

[Service]
Type=oneshot
ExecStart=/usr/local/sbin/bootstrap-vms
